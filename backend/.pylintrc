[MASTER]
ignore=venv,__pycache__,tests,alembic

[MESSAGES CONTROL]
# Disable less critical warnings for this codebase
disable=
    C0114,  # missing-module-docstring
    C0115,  # missing-class-docstring
    C0116,  # missing-function-docstring
    C0301,  # line-too-long (handled by black/ruff)
    C0302,  # too-many-lines
    R0902,  # too-many-instance-attributes
    R0903,  # too-few-public-methods
    R0914,  # too-many-locals
    R1702,  # too-many-nested-blocks
    W0621,  # redefined-outer-name (common in fixtures)
    W1203,  # logging-fstring-interpolation (acceptable for this project)

[FORMAT]
max-line-length=120

[DESIGN]
max-args=10
max-locals=20
max-attributes=15
